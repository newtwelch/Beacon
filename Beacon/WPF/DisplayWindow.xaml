<Window x:Class="Beacon.WPF.DisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Beacon.WPF"
        xmlns:hlpr="clr-namespace:Beacon.Model.Helpers"
        mc:Ignorable="d"
        Closing="Window_Closing" 
        ShowActivated="False"
        
        WindowStyle="None" Focusable="False"
        Background="#0A0A0A"
        Title="DisplayWindow" d:Height="720" d:Width="1280">
    <!-- =====================================
WINDOW CHROME: custom title bar and window stuff
========================================== -->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" CornerRadius="0"
                 GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>
    <DockPanel>

        <Viewbox Stretch="Uniform" DockPanel.Dock="Top">
            <Border CornerRadius="24" BorderThickness="0 0 0 2" BorderBrush="White" Margin="20" Padding="50 20">
                <DockPanel Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DockPanel}}, Path=ActualWidth}" Opacity=".9">
                    <TextBlock Background="Transparent" x:Name="Header1" 
                                           TextWrapping="Wrap" FontFamily="Gontserrat"  
                                           Foreground="#F5F3F5" VerticalAlignment="Center" 
                                           FontWeight="Bold" FontSize="55" HorizontalAlignment="Left"/>
                    <TextBlock Background="Transparent" x:Name="Header2"
                                           TextWrapping="Wrap" 
                                           Foreground="#F5F3F5" VerticalAlignment="Center"
                                           FontSize="55" HorizontalAlignment="Right"/>
                </DockPanel>
            </Border>
        </Viewbox>

        <Viewbox StretchDirection="DownOnly" Margin="40 0 40 20">
            <hlpr:HighlightableTextBlock x:Name="Content"
                                         TextWrapping="NoWrap" FontFamily="Gontserrat"
                                         Foreground="#F5F3F5"
                                         HighlightBrush="Orange"  HighlightCount="0" Opacity=".9"
                                         TextAlignment="Center">
            </hlpr:HighlightableTextBlock>
        </Viewbox>

    </DockPanel>
</Window>
