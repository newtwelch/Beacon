<?xml version="1.0" encoding="UTF-8" ?>
<Window
    x:Class="Beacon.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/winfx/2006/xaml/presentation/blazor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Beacon.WPF;assembly=Beacon"
    xmlns:blazor="clr-namespace:Beacon.Blazor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    MinHeight="506"
    MinWidth="900"
    Height="720"
    Width="1280"
    mc:Ignorable="d">
    <Grid>
        <b:BlazorWebView
            HostPage="Blazor/wwwroot/index.html"
            Services="{StaticResource services}"
            StartPath="/">
            <b:BlazorWebView.RootComponents>
                <b:RootComponent
                    ComponentType="{x:Type blazor:Main}"
                    Selector="#app"/>
            </b:BlazorWebView.RootComponents>
        </b:BlazorWebView>
    </Grid>
</Window>
